{
  "name": "bkgd-app",
  "private": true,
  "version": "0.9.15",
  "type": "module",
  "scripts": {
    "dev": "VITE_BKGD_VERSION=$(bun run version) bunx --bun vite",
    "version": "grep -m1 -o '\"version\": \"[^\"]*' package.json | cut -d'\"' -f4",
    "build": "tsc && VITE_BKGD_VERSION=$(bun run version) bun vite build",
    "build:local": "tsc && VITE_BKGD_VERSION=$(bun run version) bunx --bun vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "preview": "VITE_BKGD_VERSION=$(bun run version) bunx --bun vite preview"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@headlessui/tailwindcss": "^0.2.0",
    "@phosphor-icons/react": "^2.0.10",
    "@tanstack/router": "0.0.1-beta.92",
    "framer-motion": "^10.12.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react-swc": "3.0.0",
    "autoprefixer": "^10.4.15",
    "bun-types": "^1.0.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "postcss": "^8.4.28",
    "prettier": "3.0.2",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2",
    "vite": "^4.3.9"
  },
  "browserslist": [
    "defaults"
  ]
}
